
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
<h2 style="text-align: center;">Log in</h2>

  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-input' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'form-input' } %>

    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: 'form-input' } %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'login-button' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
